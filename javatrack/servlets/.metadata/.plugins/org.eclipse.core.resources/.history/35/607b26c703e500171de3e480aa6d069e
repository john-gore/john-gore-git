	    				</c:when>
	   				<c:otherwise>
	   					<a href="/events/${ outStateGetTogether.getId() }/join">Deactivate</a>
	   				</c:otherwise>
    				</c:choose> 
    				<c:choose>
    				<c:when test="${ subscription.getUsers().size() == 0 }">
	   						<a href="/subscription/${ subscription.getId() }/delete">Delete</a>
	   					</c:when>
	   			</c:choose>
